{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "MongoDB Basic Project",
    "description": "API For Accessing Employees Data",
    "license": { "name": "MIT", "url": "https://opensource.org/licenses/MIT" }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    { "name": "Authentication", "description": "API for authenticating users in the system" },
    { "name": "Employees", "description": "API for employees in the system" }

  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/auths/register": {
        "post": {
          "tags": ["Authentication"],
          "summary": "Register User into the System",
          "responses": {
            "200": {
              "description": "OK",
              "schema": { "$ref": "/employees" }
            }
          }
        }
      },
      "/auths/login": {
        "post": {
          "tags": ["Authentication"],
          "summary": "Login User into the system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": { "$ref": "/employees" }
            }
          }
        }
      },
    "/employees": {
      "get": {
        "tags": ["Employees"],
        "summary": "Get all employees in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": { "$ref": "/employees" }
          }
        }
      },
      "post": {
        "tags": ["Employees"],
        "summary": "Post Employee into the system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": { "$ref": "/employees" }
          }
        }
      }
    },
    "/employees/{id}": {
        "get": {
          "tags": ["Employees"],
          "summary": "Get an employee in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": { "$ref": "/employees" }
            }
          }
        },
        "put": {
            "tags": ["Employees"],
            "summary": "Update an employee in system",
            "responses": {
              "200": {
                "description": "OK",
                "schema": { "$ref": "/employees" }
              }
            }
          },
          "delete": {
            "tags": ["Employees"],
            "summary": "Delete an employee in system",
            "responses": {
              "200": {
                "description": "OK",
                "schema": { "$ref": "/employees" }
              }
            }
          }
    }
  }

}
